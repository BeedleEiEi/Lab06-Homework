        android:layout_height="77dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_weight="0.06"
        android:background="@drawable/frame"
        android:lines="3"
        android:minLines="3"
        android:text="\nxxx-xxxxxx-x\nx,xxx"
