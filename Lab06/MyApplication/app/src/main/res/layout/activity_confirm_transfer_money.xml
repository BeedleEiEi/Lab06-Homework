<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#533d7d"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="2"
        android:minLines="2"
        android:text="SCB\nไทยพาณิชย์ "
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/textView4" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="313dp"
        android:layout_height="415dp"
        android:layout_gravity="center"
        android:background="@drawable/slip"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="142dp"
        android:layout_height="23dp"
        android:text="สมชาย"
        android:layout_marginRight="13dp"
        app:layout_constraintRight_toRightOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        android:layout_marginTop="155dp" />

    <TextView
        android:id="@+id/targetName"
        android:layout_width="120dp"
        android:layout_height="25dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/imageView2"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView5"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/amountTotal"
        android:layout_width="127dp"
        android:layout_height="24dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/imageView2"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/targetName"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/targetName" />

    <TextView
        android:id="@+id/fee"
        android:layout_width="124dp"
        android:layout_height="25dp"
        android:text="0"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/amountTotal"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/amountTotal"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/imageView2" />

    <TextView
        android:id="@+id/noteTexts"
        android:layout_width="137dp"
        android:layout_height="23dp"
        android:layout_marginLeft="-22dp"
        app:layout_constraintLeft_toLeftOf="@+id/fee"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/fee" />


</android.support.constraint.ConstraintLayout>
